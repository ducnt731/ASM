    <center>
    <h3>New Book</h3>
    </center>
    <form action="/admin/addProduct" method="post" class="row g-3" >
    <div class="col-md-6">
    <label for="txtName" class="form-label">Name</label>
    <input type="text" class="form-control" name="txtName" id="txtName" value="{{oldValues.name}}">
        <span style="color: red;">{{errorName}}</span>
    </div>
    <label for="txtCategory" class="form-label">Name</label>
    <input type="text" class="form-control" name="txtCategory" id="txtCategory" value="{{oldValues.category}}">
        <span style="color: red;">{{errorNotFindCategory}}</span>
    </div>
    <div class="col-md-6">
    <label for="txtPrice" class="form-label">Price</label>
    <input type="text" class="form-control" name="txtPrice" id="txtPrice" value="{{oldValues.price}}">
        <span style="color: red;">{{errorPrice}}</span> 
        <span style="color: red;">{{errorPriceNaN}}</span>
    </div>
    <div class="col-md-12">
    <label for="txtDescription" class="form-label">Description</label>
    <input type="text" class="form-control" name="txtDescription" id="txtDescription" value="{{oldValues.description}}">
        <span style="color: red;">{{errorDescription}}</span>
    </div>
    <div class="col-12">
    <label for="txtPickURL" class="form-label">Picture</label>
    <input type="text" class="form-control" name="txtPicURL" id="txtPicURL" size="150" value="{{oldValues.picURL}}">
        <span style="color: red;">{{errorLink}}</span>
    </div>
    <div class="col-md-6">
    <label for="txtAuthor" class="form-label">Author</label>
    <input type="text" class="form-control" name="txtAuthor" id="txtAuthor" value="{{oldValues.name}}">
        <span style="color: red;">{{errorAuthor}}</span>
    </div>
    <div class="col-6">
    <label for="txtQuantity" class="form-label">Quantity</label>
    <input type="text" class="form-control" name="txtQuantity" id="txtQuantity" value="{{oldValues.quantity}}">
        <span style="color: red;">{{errorQuantity}}</span> 
        <span style="color: red;">{{errorQuantityNaN}}</span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
