<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <form action="order" method="post">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <table class="table table-hover">
                    <h1>Your Cart</h1>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Total</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cart.cart}}
                            <tr>
                                <td class="col-md-6">
                                <div class="media">
                                    <input type="hidden" name="txtpicURLO" value="{{picURL}}">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object" src="{{picURL}}" style="width: 72px; height: 72px;"> </a>
                                    <div class="media-body">
                                        <h4 class="media-heading"><a href="#">{{name}}</a></h4>
                                        <h5 class="media-heading"> by <a href="#">Brand name</a></h5>
                                        <span>Status: </span><span class="text-warning"><strong>Leaves warehouse in 2 - 3 weeks</strong></span>
                                    </div>
                                </div></td>
                                <td class="col-md-1" style="text-align: center">
                                <input type="text" class="form-control"  value="{{qty}}">
                                </td>
                                <td class="col-md-1 text-center"><strong>${{price}}</strong></td>
                                <td class="col-md-1 text-center"><strong>${{subtotal}}</strong></td>
                                <td class="col-md-1"><a onclick="ConfirmDelete()" href="/remove?id={{id}}">Remove </a></td>
                            </tr>
                        {{/each}}
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td><h5>Subtotal</h5></td>
                            <td class="text-right"><h5><strong>${{total}}</strong></h5></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td><h5>Estimated shipping</h5></td>
                            <td class="text-right"><h5><strong>${{ship}}</strong></h5></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td><h3>Total</h3></td>
                            <td class="text-right"><h3><strong>${{totalC}}</strong></h3></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td>
                            <button type="button" class="btn btn-default">
                                <a href="/"><span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping</a>
                            </button></td>
                            <td>
                            <input type="submit" value="Check out" class = "btn btn-success">
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>
<script>
    function ConfirmDelete()
{
    var x = confirm("Are you sure you want to delete?");
        if (x)
        return true;
        else
        return false;
}
</script>